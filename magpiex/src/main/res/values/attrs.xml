        <!-- 图标大小 -->
        <attr name="i2_tabIconSize" format="dimension|reference" />

        <!-- 当  indicator_type == TabWithIconAndText，图标和文字的显示方向 -->
        <attr name="i2_tabOrientation" format="enum">
            <enum name="vertical" value="0" />
