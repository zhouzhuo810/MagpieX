        <attr name="i2_normalTabTextSize" format="dimension|reference" />
        <!-- 未选中时的文字颜色 -->
        <attr name="i2_normalTabTextColor" format="color|reference" />
        <!-- 未选中时的背景图片 -->
        <attr name="i2_normalTabBg" format="reference" />
        <!-- 选中时的背景图片 -->
        <attr name="i2_selectTabBg" format="reference" />
        <!-- 垂直分割线是否显示 -->
