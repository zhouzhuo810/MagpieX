        <!-- 垂直分割线宽度 -->
        <attr name="i2_gapLineWidth" format="dimension|reference" />
        <!-- 垂直分割线颜色 -->
        <attr name="i2_gapLineColor" format="color|reference" />
        <!-- 垂直分割线垂直padding -->
        <attr name="i2_gapLinePadding" format="dimension|reference" />
        <!-- 是否均分 -->
        <attr name="i2_shouldTabExpand" format="boolean" />
        <!-- 下划线是否显示 -->
        <attr name="i2_showUnderline" format="boolean" />
        <!-- 下划线的颜色 -->
        <attr name="i2_underlineColor" format="color|reference" />
        <!-- 下划线的高度 -->
        <attr name="i2_underlineHeight" format="dimension|reference" />
        <!-- 下划线左右的padding -->
        <attr name="i2_underlinePadding" format="dimension|reference" />
        <!-- 是否使用圆形背景 -->
        <attr name="i2_showRoundBg" format="boolean" />
        <!-- 圆形背景颜色 -->
        <attr name="i2_roundBgColor" format="color|reference" />
