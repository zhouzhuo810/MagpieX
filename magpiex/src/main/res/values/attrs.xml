        </attr>
        <!-- 当  indicator_type == TabWithIconAndText，图标和文字之间的间距 -->
        <attr name="i2_tabIconTextMargin" format="dimension|reference" />
        <!-- 当  indicator_type == TabWithIconAndText 且 i2_tabOrientation == horizontal 时，是否隐藏图标 -->
        <attr name="i2_tabIsHorizontalHideIcon" format="boolean" />

        <!-- 当  indicator_type == RoundPoint 时，圆点的选中宽高 -->
        <attr name="i2_selectPointSize" format="dimension|reference" />
        <!-- 当  indicator_type == RoundPoint 时，圆点的默认宽高 -->
        <attr name="i2_normalPointSize" format="dimension|reference" />
        <!-- 当  indicator_type == RoundPoint 时，圆点的选中颜色 -->
        <attr name="i2_selectPointColor" format="color|reference" />
        <!-- 当  indicator_type == RoundPoint 时，圆点的默认颜色 -->
        <attr name="i2_normalPointColor" format="color|reference" />
        <!-- 当  indicator_type == RoundPoint 时，圆点的间距 -->
        <attr name="i2_pointSpacing" format="dimension|reference" />
        <!-- 是否需要根据屏幕缩放，默认：true -->
        <attr name="i2_isNeedScaleInPx" format="boolean" />

    </declare-styleable>

    <declare-styleable name="ScrollGridRecyclerView">
        <!-- 自动滚动开关，默认：开 -->
        <attr name="sgr_scrollEnable" format="boolean" />
        <!-- 列的数量，默认：1 -->
        <attr name="sgr_spanCount" format="integer" />
        <!-- 自动滚动速度，默认：20 -->
        <attr name="sgr_scrollSpeed" format="integer" />
        <!-- 滚动到顶部延迟多久，单位：ms，默认：3000 -->
        <attr name="sgr_topBottomDelay" format="integer" />
    </declare-styleable>

    <declare-styleable name="ScrollListRecyclerView">
        <!-- 自动滚动开关，默认：开 -->
        <attr name="slr_scrollEnable" format="boolean" />
        <!-- 自动滚动速度，默认：20 -->
        <attr name="slr_scrollSpeed" format="integer" />
        <!-- 滚动到顶部延迟多久，单位：ms，默认：3000 -->
        <attr name="slr_topBottomDelay" format="integer" />
    </declare-styleable>

    <declare-styleable name="MaxHeightScrollView">
        <!-- 最大高度百分比,范围 0-1.0，默认：0.7 -->
        <attr name="mhs_max_height_percent" format="float" />
        <!-- 最大高度值, 如果设置了值则按值，否则按比例，默认：0 -->
        <attr name="mhs_max_height_value" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MaxHeightRecyclerView">
        <!-- 最大高度百分比,范围 0-1.0，默认：0.7 -->
        <attr name="mhr_max_height_percent" format="float" />
        <!-- 最大高度值, 如果设置了值则按值，否则按比例，默认：0 -->
        <attr name="mhr_max_height_value" format="dimension" />
    </declare-styleable>

    <!--  列表对话框列表文字颜色  -->
    <attr name="x_item_text_color" format="color" />
    <!--  列表对话框列表点击后的背景颜色 v21- -->
    <attr name="x_item_bg_color" format="color" />
    <!--  列表对话框列表点击后的背景颜色 v21+ -->
    <attr name="x_item_bg_color_21" format="color" />
    <!--  对话框标题背景颜色 -->
    <attr name="x_dialog_title_bg_color" format="color" />
    <!--  对话框内容背景颜色 -->
    <attr name="x_dialog_content_bg_color" format="color" />
    <!--  对话框标题文字颜色 -->
    <attr name="x_dialog_title_text_color" format="color" />
    <!--  对话框内容文字颜色 -->
    <attr name="x_dialog_content_text_color" format="color" />
    <!--  对话框按钮文字颜色 -->
    <attr name="x_dialog_btn_text_color" format="color" />
    <!--  对话框按钮背景资源 -->
    <attr name="x_dialog_btn_bg_drawable" format="reference" />
    <!-- loading 对话框 ios 样式的菊花图标 -->
    <attr name="x_dialog_ios_loading_drawable" format="reference" />
    <!-- loading 对话框 ios 样式的文字颜色 -->
    <attr name="x_dialog_ios_loading_text_color" format="reference" />

</resources>