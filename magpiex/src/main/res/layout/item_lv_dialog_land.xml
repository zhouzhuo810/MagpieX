<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:ignore="PxUsage">

    <View
        android:id="@+id/line_item"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorBlack10" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dialog_item_height_land"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="30px"
        android:paddingEnd="30px"
        android:textColor="?attr/x_item_text_color"
        android:textSize="@dimen/base_dialog_title_text_size_land" />

</LinearLayout>